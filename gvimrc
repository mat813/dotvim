set encoding=utf-8

source $HOME/.vimrc

set mouse=a

set guifont=Menlo_Regular:h12
set guioptions-=T		  " Hide toolbar.
set guioptions-=R                 " Don't show right scrollbar
set guioptions-=r                 " Don't show right scrollbar
set guioptions-=L                 " Don't show left scrollbar
set guioptions-=l                 " Don't show left scrollbar

set showtabline=2
set guitablabel=%N\ %M%t
set guitabtooltip=%F
